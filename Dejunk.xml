<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	
	<Script file="Dejunk.lua"/>
	
	<Frame name="DejunkFrame" parent="UIParent" hidden="false">
		<Frames>
			<Button name="DejunkButton" parent="MerchantFrame" inherits="OptionsButtonTemplate" text="Dejunk">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentLootFilter" relativePoint="TOPLEFT" x="-4" y="0"/>
				</Anchors>
				
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("LeftButtonUp", "RightButtonUp")
					</OnLoad>
					
					<OnShow>
						DejunkButton_OnShow(self)
					</OnShow>
					
					<OnHide>
						DejunkButton_OnHide(self)
					</OnHide>
					
					<OnClick>
						DejunkButton_OnClick(self, button, down)
					</OnClick>
					
					<OnEnter>
						DejunkButton_OnEnter(self)
					</OnEnter>
					
					<OnLeave>
						DejunkButton_OnLeave(self)
					</OnLeave>
				</Scripts>
			</Button>
			
			<Frame name="DejunkRepairFrame"/>
		</Frames>
		
		<Scripts>
			<OnLoad>
				Dejunk_OnLoad(self)
			</OnLoad>
			
			<OnEvent>
				Dejunk_OnEvent(self, event, ...)
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>